# Mandatory to provide Mistral API key
MISTRAL_API_KEY=your_mistral_api_key

# If Openrouter is not being used, comment the next line
OPENROUTER_API_KEY=your_openrouter_api_key
# Set base URL to Openrouter if used or to OpenAI
OPENAI_BASE_URL=https://openrouter.ai/api/v1  # or https://api.openai.com/v1

# If Openrouter is being used, comment the next line
OPENAI_API_KEY=your_openai_api_key

# Model selection
OCR_MODEL=mistral-ocr-latest
VISION_MODEL=gpt-4o-mini # or openai/gpt-4o-mini if openrouter is being used

# Vision Refinement Parameters
# Maximum number of refinement rounds per page pair. Each round attempts to improve the markdown quality.
# Higher values may improve quality but increase processing time and API costs.
VISION_MAX_ROUNDS=3

# Maximum number of retry attempts for each vision API call if it fails.
# Higher values provide more resilience to transient API errors.
VISION_MAX_RETRIES=3

# Base delay (in seconds) between retry attempts for failed vision API calls.
# The actual delay uses exponential backoff: delay = base_delay * (2 ^ attempt_number)
VISION_RETRY_BASE_DELAY=2.0

# Temperature parameter for vision model API calls (0.0 to 2.0).
# Lower values (0.0-0.3) produce more deterministic, consistent outputs.
# Higher values (0.7-2.0) produce more creative but less consistent outputs.
# Recommended: 0.0-0.1 for document processing tasks.
VISION_TEMPERATURE=0.0

# Logging
LOG_LEVEL=DEBUG